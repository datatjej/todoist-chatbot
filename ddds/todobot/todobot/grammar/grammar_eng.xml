<?xml version="1.0" encoding="utf-8"?>
<grammar>

<action name="top">
  <one-of>
    <item>main menu</item>
    <item>top</item>
    <item>beginning</item>
    <item>cancel</item>
    <item>forget it</item>
    <item>never mind</item>
    <item>abort</item>
  </one-of>
</action>

<action name="up">
  <one-of>
    <item>up</item>
    <item>back</item>
    <item>go back</item>
  </one-of>
</action>

  <individual name="project_todo">todo</individual>
  <individual name="project_today">today</individual>
  <individual name="project_week">week</individual>
  <individual name="project_shopping">shopping</individual>
  <individual name="project_inbox">inbox</individual>
  
  <individual name="task_noodles">noodles</individual>
  <individual name="task_woksauce">wok sauce</individual>
  <individual name="task_zuchhini">zuchhini</individual>
  <individual name="task_springonions">spring onions</individual>

<action name="create_project">
  <one-of>
    <item>I want to make a new list</item>
    <item>I want to make a list for tomorrow</item>
    <item>make a <slot predicate="project_to_add"/> list</item>
	<item>make a list called <slot predicate="project_to_add"/></item>
	<item>make a list called <slot predicate="project_to_add"/> for tomorrow</item>
	<item>make a project called <slot predicate="project_to_add"/></item>
	<item>make a project called <slot predicate="project_to_add"/> for tomorrow</item>
	<item>I want to make a <slot predicate="project_to_add"/> list</item>
	<item>ok, so I want to make a <slot predicate="project_to_add"/> list</item>
	<item>ok, so I want to make a <slot predicate="project_to_add"/> list for tomorrow</item>
  </one-of>
</action>

<action name="create_task">
  <one-of>
	<item>add new task</item>
    <item>add task <slot predicate="task_to_add"/></item>
	<item>add task <slot predicate="task_to_add"/> to <slot predicate="project_to_add"/></item>
	<item>create task <slot predicate="task_to_add"/></item>
	<item>add task <slot predicate="task_to_add"/> to the <slot predicate="project_to_add"/> list</item>
	<item>add task <slot predicate="task_to_add"/> to list <slot predicate="project_to_add"/></item>
    <item>create task <slot predicate="task_to_add"/> in <slot predicate="project_to_add"/></item>
	<item>create task <slot predicate="task_to_add"/> in list <slot predicate="project_to_add"/></item>
    <item>I want to buy <slot predicate="task_to_add"/></item>
	<item>I also want to buy <slot predicate="task_to_add"/></item>
	<item>I want to get <slot predicate="task_to_add"/></item>
	<item>I also want to get <slot predicate="task_to_add"/></item>
  </one-of>
</action>

<question speaker="user" predicate="project_to_show" type="wh_question">
	<one-of>
	<item>show me my lists please</item>
	<item>get my lists</item>
	<item>get my projects</item>
	<item>read my projects</item>
	<item>read my lists</item>
	<item>read my lists</item>
	</one-of>
</question>

 <question type="wh_question" speaker="all" predicate="project_to_show">lists</question>

<question speaker="system" predicate="project_to_add" type="wh_question">what should the list be called</question>
<question type="wh_question" predicate="task_to_add" speaker="system">what should the task be called</question>
 

<answer speaker="system" predicate="project_to_show">
   Here are your lists: <slot predicate="project_to_show"/>
</answer>

<report action="CreateProject" status="ended">a list called <slot predicate="project_to_add"/> has been created</report>
<report action="CreateTask" status="ended">task <slot predicate="project_to_add"/> has been added</report>

</grammar>